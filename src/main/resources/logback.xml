<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		
			<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>info</level> </filter>
		
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>arthouse.log</file>
		<encoder>
			<pattern>%date %level [%thread] %logger{5} [%file:%line] %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILEHTML" class="ch.qos.logback.core.FileAppender">
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="ch.qos.logback.classic.html.HTMLLayout">
				<pattern>%relative%thread%mdc%level%logger%msg</pattern>
			</layout>
		</encoder>
		<file>test.html</file>
	</appender>

	<logger name="org.hibernate.SQL" level="info" />
	<logger name="org.hibernate.cache" level="trace" />
	<logger name="org.hibernate.transaction" level="info" />
	<logger name="net" level="trace" />
	<root level="warn">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
